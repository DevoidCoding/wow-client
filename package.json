{
    "name": "wow-client",
    "version": "0.0.0",
    "author": "Jordan Deprez <devoid.coding@gmail.com>",
    "description": "An electron-vue project",
    "license": null,
    "main": "./dist/electron/main.js",
    "scripts": {
        "build": "yarn compile && electron-builder",
        "build:dir": "yarn build -- --dir -c.compression=store -c.mac.identity=null",
        "build:clean": "del dist/electron/* !.gitkeep",
        "build:web": "webpack --env.production --config .electron-vue webpack.web.config.js",
        "compile": "electron-webpack",
        "dev": "electron-webpack dev",
        "e2e": "npm run build && mocha test/e2e",
        "test": "npm run unit && npm run e2e",
        "unit": "karma start test/unit/karma.conf.js",
        "postinstall": ""
    },
    "build": {
        "productName": "wow-client",
        "appId": "org.simulatedgreg.electron-vue",
        "directories": {
            "output": "build"
        },
        "files": ["dist/electron/**/*"],
        "dmg": {
            "contents": [
                {
                    "x": 410,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 150,
                    "type": "file"
                }
            ]
        },
        "mac": {
            "icon": "build/icons/icon.icns"
        },
        "win": {
            "icon": "build/icons/icon.ico"
        },
        "linux": {
            "icon": "build/icons"
        }
    },
    "dependencies": {
        "axios": "^0.16.1",
        "source-map-support": "^0.4.18",
        "vue": "^2.4.4",
        "vue-electron": "^1.0.6",
        "vue-router": "^2.5.3"
    },
    "devDependencies": {
        "babel-plugin-istanbul": "^4.1.5",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-preset-stage-0": "^6.24.1",
        "babel-register": "^6.24.1",
        "babili-webpack-plugin": "^0.1.2",
        "chai": "^4.0.0",
        "copy-webpack-plugin": "^4.0.1",
        "cross-env": "^5.0.5",
        "del-cli": "^1.1.0",
        "devtron": "^1.4.0",
        "electron": "^1.7.6",
        "electron-builder": "^19.31.1",
        "electron-debug": "^1.4.0",
        "electron-webpack": "^1.6.1",
        "electron-webpack-ts": "^1.1.3",
        "electron-webpack-vue": "^1.0.8",
        "inject-loader": "^3.0.0",
        "karma": "^1.3.0",
        "karma-chai": "^0.1.0",
        "karma-coverage": "^1.1.1",
        "karma-electron": "^5.1.1",
        "karma-mocha": "^1.2.0",
        "karma-sourcemap-loader": "^0.3.7",
        "karma-spec-reporter": "^0.0.31",
        "karma-typescript": "^3.0.7",
        "karma-webpack": "^2.0.1",
        "mocha": "^3.0.2",
        "require-dir": "^0.3.0",
        "spectron": "^3.7.1",
        "typescript": "^2.5.3",
        "vue-loader": "^13.0.5",
        "webpack": "^3.6.0",
        "webpack-merge": "^4.1.0"
    }
}
